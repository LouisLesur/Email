<div id="current-email">

  <div class="">
    <div class="w-100 bg-info h-25 text-white pb-2 pt-3 rounded-lg">
      <h5 class="ml-5"> <%=email.object%> </h5>
    </div>
    <div class="container">
      <p class="m-5  text-break">
      <%= email.body %>
      </p>
    </div>
  </div>

  <div class="d-flex justify-content-around">
    <%= link_to "Supprimer", email_path, method:"delete", class: "btn btn-danger w-100 text-white", remote: true %>
    <%= link_to "Marquer comme lu", email_path(email.id), method:"patch", class: "btn btn-secondary w-100 text-white", id: "read-unread-button", remote: true %>
  </div>
</div>
